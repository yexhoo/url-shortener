{
  "name": "url-shortener",
  "version": "0.0.1",
  "description": "A URL Shortener is a service that creates short aliases for URLs. It generates a shortcode for a URL and then redirects the user to the URL when that code is accessed.",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf dist/ && tsc -p .",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "lint": "eslint src/",
    "prepare": "husky install",
    "start": "npm run build && node dist/app.js",
    "dev": "NODE_ENV=development nodemon src/app.ts "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yexhoo/url-shortener.git"
  },
  "keywords": [
    "url",
    "shortener"
  ],
  "author": "Yexhoo (Josue Nolasco Miranda)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yexhoo/url-shortener/issues"
  },
  "homepage": "https://github.com/yexhoo/url-shortener#readme",
  "engines": {
    "node": "14.17.6"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/?(*.)+(test).+(ts|js)"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testResultsProcessor": "jest-sonar-reporter",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "src/**/*.js",
      "!src/app.ts"
    ],
    "setupFiles": [
      "<rootDir>/jestSetup.js"
    ],
    "testEnvironment": "node",
    "verbose": true
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml"
  },
  "dependencies": {
    "ansi-regex": "6.0.1",
    "express": "4.17.2",
    "is-valid-http": "2.0.1"
  },
  "devDependencies": {
    "@jest-mock/express": "1.4.5",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "@typescript-eslint/eslint-plugin": "5.9.0",
    "@typescript-eslint/parser": "5.9.0",
    "eslint": "8.6.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.3.4",
    "husky": "8.0.0",
    "jest": "27.4.7",
    "jest-sonar-reporter": "2.0.0",
    "nodemon": "2.0.15",
    "npm": "8.11.0",
    "ts-jest": "27.1.2",
    "ts-node": "10.4.0",
    "typescript": "4.5.4"
  }
}
