{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true, 
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "useUnknownInCatchVariables" : false,
      "allowJs": true
    },
    "exclude": ["node_modules", "dist", "coverage"]
  }